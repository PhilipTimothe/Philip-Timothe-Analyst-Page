---
interface Props {
  title: string;
  category: string;
  description: string;
  image: string;
  slug: string;
}

const { title, category, description, image, slug } = Astro.props;
---

<article class="group">
  <a href={`/portfolio/projects/${slug}`} class="block space-y-6">
    <div class="aspect-[3/4] overflow-hidden bg-gray-900">
      <img 
        src={image} 
        alt={title}
        class="w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
    </div>
    <div class="space-y-4">
      <p class="text-sm tracking-wide text-gray-600">{category}</p>
      <h3 class="text-xl font-futura tracking-[0.1em] text-gray-900 group-hover:text-accent transition-colors">
        {title}
      </h3>
      <p class="text-gray-600 leading-relaxed">{description}</p>
    </div>
  </a>
</article>