---
interface Props {
  title: string;
  date: string;
  excerpt: string;
  slug: string;
}

const { title, date, excerpt, slug } = Astro.props;
---

<article class="group">
  <a href={`/blog/${slug}`} class="block space-y-4">
    <div class="space-y-2">
      <p class="text-sm text-gray-500">{date}</p>
      <h3 class="text-xl font-display font-bold text-white group-hover:text-accent transition-colors">
        {title}
      </h3>
    </div>
    <p class="text-gray-400">{excerpt}</p>
  </a>
</article>