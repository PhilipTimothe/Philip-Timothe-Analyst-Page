---
interface Props {
  name: string;
  icon: string;
}

const { name, icon } = Astro.props;
---

<div class="group flex flex-col items-center gap-4 p-6">
  <div class="w-16 h-16 flex items-center justify-center">
    <img src={icon} alt={name} class="w-12 h-12 object-contain filter brightness-0 invert opacity-70 group-hover:opacity-100 transition-opacity" />
  </div>
  <p class="text-sm font-futura tracking-[0.1em] text-gray-400 group-hover:text-white transition-colors">{name}</p>
</div>