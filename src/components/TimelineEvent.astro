---
interface Props {
  year: string;
  title: string;
  description: string;
  category: string;
}

const { year, title, description, category } = Astro.props;
---

<div class="timeline-event group" data-year={year}>
  <div class="flex gap-8 items-start opacity-75 group-hover:opacity-100 transition-opacity duration-500">
    <div class="flex-shrink-0 w-24 text-right">
      <span class="text-accent font-futura tracking-wider">{year}</span>
    </div>
    
    <div class="flex-grow space-y-4 relative">
      <div class="absolute -left-[41px] top-[10px] w-3 h-3 bg-accent rounded-full transform scale-0 group-hover:scale-100 transition-transform duration-300"></div>
      <div class="h-px w-8 bg-accent/50 absolute -left-8 top-[14px]"></div>
      
      <div class="space-y-2">
        <span class="text-sm font-futura tracking-[0.2em] text-accent uppercase">{category}</span>
        <h3 class="text-xl font-display text-white">{title}</h3>
        <p class="text-gray-300 leading-relaxed">{description}</p>
      </div>
    </div>
  </div>
</div>

<style>
  .timeline-event::before {
    content: '';
    @apply absolute left-[95px] top-0 w-px h-full bg-accent/30;
  }

  .timeline-event:last-child::before {
    @apply h-4;
  }
</style>